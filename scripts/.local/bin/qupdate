#!/bin/sh

if test "$USER" != "root"; then
	echo 'Must run as root'
	exit 1
fi

if command -v pacman; then
	pacman -Syu
fi

if command -v emerge; then
	emaint -a sync
	layman -S

	emerge -aquDNU @world
	emerge -aq @module-rebuild
fi

if command -v xbps-install; then
	xbps-install -Su
fi

if command -v flatpak; then
	flatpak update
fi
