# Basic settings
before-sleep 'swaylock'
lock 'swaylock'

# Notify then lock screen 240 300
timeout 5 'pgrep swaylock || notify-send "Autolocking in 1 minute..."'
timeout 10 'pgrep swaylock || swaylock'

# Turn screen off then suspend 330 360
timeout 15 'swaymsg "output * dpms off"' resume 'swaymsg "output * dpms on"'
timeout 20 'qsuspend'

# Sleep sooner when locked 30 60
timeout 5 'pgrep swaylock && swaymsg "output * dpms off"' resume 'pgrep swaylock && swaymsg "output * dpms on"'
timeout 10 'pgrep swaylock && qsuspend'
