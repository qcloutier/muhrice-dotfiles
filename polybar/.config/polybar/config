# vim:ft=dosini

[colours]
black      = #dd0d0d0d
dark_grey  = #595959
light_grey = #bfbfbf
white      = #f2f2f2

[style/text]
content-foreground = ${colours.light_grey}
content-padding    = 1

[style/script]
format-foreground = ${colours.light_grey}
format-padding    = 1

[settings]
screenchange-reload = true

[bar/top]
width         = 100%
height        = 24
background    = ${colours.black}
foreground    = ${colours.dark_grey}
separator     = " | "
font-0        = Noto Sans:size=9:weight=bold;2
font-1        = Noto Sans CJK JP:size=9:weight=bold;2
font-2        = Noto Color Emoji:scale=11:weight=bold;2
font-3        = DejaVu Sans:size=9:weight=bold;2
border-size   = 4
border-color  = ${colours.black}
modules-left  = allprograms windowlist music
modules-right = battery brightness volume wireless ethernet date time
wm-restack    = bspwm

[module/allprograms]
type       = custom/text
content    = ðŸ’½ All Programs
click-left = rofi -show drun
inherit    = style/text

[module/windowlist]
type       = custom/text
content    = ðŸ”² Window List
click-left = rofi -show window
inherit    = style/text

[module/music]
type        = custom/script
exec        = $HOME/.config/polybar/scripts/music
click-left  = mpc toggle
scroll-down = mpc prev
scroll-up   = mpc next
inherit     = style/script

[module/battery]
type    = custom/script
exec    = $HOME/.config/polybar/scripts/battery
inherit = style/script

[module/brightness]
type        = custom/script
exec        = $HOME/.config/polybar/scripts/brightness
scroll-down = xbacklight -dec 10
scroll-up   = xbacklight -inc 10
inherit     = style/script

[module/volume]
type        = custom/script
exec        = $HOME/.config/polybar/scripts/volume
click-left  = pulsemixer --toggle-mute
scroll-down = pulsemixer --unmute --change-volume -5
scroll-up   = pulsemixer --unmute --change-volume +5
inherit     = style/script

[module/wireless]
type    = custom/script
exec    = $HOME/.config/polybar/scripts/wlan
inherit = style/script

[module/ethernet]
type    = custom/script
exec    = $HOME/.config/polybar/scripts/ethernet
inherit = style/script

[module/date]
type    = custom/script
exec    = $HOME/.config/polybar/scripts/date
inherit = style/script

[module/time]
type    = custom/script
exec    = $HOME/.config/polybar/scripts/time
inherit = style/script
