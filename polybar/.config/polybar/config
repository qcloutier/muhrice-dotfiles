# vim:ft=dosini

[colours]
black = #dd0d0d0d
grey  = #404040
white = #f2f2f2

[style/text]
content-foreground = ${colours.white}
content-padding    = 1

[style/script]
format-foreground = ${colours.white}
format-padding    = 1

[settings]
screenchange-reload = true

[bar/top]
width         = 100%
height        = 24
background    = ${colours.black}
foreground    = ${colours.white}
separator     = " | "
font-0        = Noto Sans:size=9;2
font-1        = Noto Sans CJK JP:size=9:weight=bold;2
font-2        = Noto Color Emoji:scale=11:weight=bold;2
font-3        = DejaVu Sans:size=9:weight=bold;2
border-size   = 4
border-color  = ${colours.black}
modules-left  = lch mus win
modules-right = bat bri vol wln eth dat tim
wm-restack    = bspwm

[module/lch]
type       = custom/text
content    = ðŸ”µ Launcher
click-left = rofi -show drun
inherit    = style/text

[module/mus]
type        = custom/script
exec        = $HOME/.config/polybar/scripts/music
click-left  = mpc toggle
scroll-down = mpc prev
scroll-up   = mpc next
inherit     = style/script
interval    = 1

[module/win]
type        = custom/script
exec        = $HOME/.config/polybar/scripts/windows
click-left  = rofi -show window
scroll-down = bspc node --focus prev
scroll-up   = bspc node --focus next
inherit     = style/script
interval    = 1

[module/bat]
type    = custom/script
exec    = $HOME/.config/polybar/scripts/battery
inherit = style/script

[module/bri]
type        = custom/script
exec        = $HOME/.config/polybar/scripts/brightness
scroll-down = xbacklight -dec 10
scroll-up   = xbacklight -inc 10
inherit     = style/script
interval    = 1

[module/vol]
type        = custom/script
exec        = $HOME/.config/polybar/scripts/volume
click-left  = pulsemixer --toggle-mute
scroll-down = pulsemixer --unmute --change-volume -5
scroll-up   = pulsemixer --unmute --change-volume +5
inherit     = style/script
interval    = 1

[module/wln]
type    = custom/script
exec    = $HOME/.config/polybar/scripts/wlan
inherit = style/script

[module/eth]
type    = custom/script
exec    = $HOME/.config/polybar/scripts/ethernet
inherit = style/script

[module/dat]
type       = custom/script
exec       = $HOME/.config/polybar/scripts/date
click-left = notify-send -i /dev/null "$(cal)"
inherit    = style/script

[module/tim]
type    = custom/script
exec    = $HOME/.config/polybar/scripts/time
inherit = style/script
