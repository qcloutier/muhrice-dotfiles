#!/bin/sh

if ! command -v pulsemixer >/dev/null; then
	exit 0
fi

if test "$(pulsemixer --get-mute)" -eq 1; then
	printf 'ğŸ”‡ Vol MUT'
	exit 0
fi

VOL="$(pulsemixer --get-volume | awk '{print int(($1+$2)/2)}')"

if   [ "$VOL" -le "30"  ]; then
	ICON='ğŸ”ˆ'
elif [ "$VOL" -le "70"  ]; then
	ICON='ğŸ”‰'
elif [ "$VOL" -le "100" ]; then
	ICON='ğŸ”Š'
else
	ICON='â—'
fi

printf "$ICON Vol $VOL%%"
