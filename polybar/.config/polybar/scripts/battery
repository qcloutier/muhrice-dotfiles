#!/bin/sh

if ! test -d /sys/class/power_supply/BAT*; then
	exit 0
fi

CAP=$(cat /sys/class/power_supply/BAT*/capacity)

if [ "$CAP" -le 20 ]; then
	ICON='â—'
else
	case $(cat /sys/class/power_supply/BAT*/status) in
		'Charging')    ICON='ğŸ”Œ' ;;
		'Discharging') ICON='ğŸ”‹' ;;
		'Full')        ICON='âš¡' ;;
		*)             ICON='â”' ;;
	esac
fi

printf "$ICON Bat $CAP%%"
