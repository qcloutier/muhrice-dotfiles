#!/bin/sh

BATS="$(echo /sys/class/power_supply/BAT*)"

if [ "$BATS" = '/sys/class/power_supply/BAT*' ]; then
	exit 0
fi

for BAT in $BATS; do
	CAP="$(cat $BAT/capacity)"

	if [ "$CAP" -le 20 ]; then
		ICON='â—'
	else
		case "$(cat $BAT/status)" in
			'Charging')    ICON='ğŸ”Œ' ;;
			'Discharging') ICON='ğŸ”‹' ;;
			'Full')        ICON='âš¡' ;;
			*)             ICON='â”' ;;
		esac
	fi

	printf "$ICON Bat $CAP%%"
	exit 0
done
