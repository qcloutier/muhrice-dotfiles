# Terminal emulator
super + Return
	kitty

# Web browser
super + shift + Return
	firefox

# File manager
super + Tab
	kitty vifm

# Program menu
super + a
	. "$HOME/.config/rofi/program_menu.sh"

# Window list
super + s
	. "$HOME/.config/rofi/window_list.sh"

# System menu
super + e
	. "$HOME/.config/rofi/system_menu.sh"

# Lock screen
super + BackSpace
	loginctl lock-session

super + shift + BackSpace
	command -v systemctl && sudo systemctl suspend || sudo loginctl suspend

# Screenshot
super + p
	maim --select --hidecursor | xclip -selection clipboard -target image/png

# Brightness down
XF86MonBrightnessDown
	xbacklight -dec 10

# Brightness up
XF86MonBrightnessUp
	xbacklight -inc 10

# Volume down
XF86AudioLowerVolume
	pulsemixer --unmute --change-volume -5

# Volume up
XF86AudioRaiseVolume
	pulsemixer --unmute --change-volume +5

# Ensure caps lock stays mapped to escape
Caps_Lock
	setxkbmap -option caps:swapescape

# Toggle the statusbar
super + ctrl + b
	killall yabar || sh -c '(yabar; while [ "$?" != "0" ]; do yabar; done) &'

# Restart bspwm and sxhkd
super + ctrl + r
	bspc wm -r && pkill -USR1 -x sxhkd

# Close or kill a node
super + shift + {_,ctrl +}q
	bspc node -{c,k}

# Toggle monocle mode
super + m
	bspc desktop -l next

# Set a node's state
super + {t,shift + t,f,shift + f}
	bspc node -t {tiled,pseudo_tiled,floating,fullscreen}

# Set a node's flags
super + {u,x,y,z}
	bspc node -g {marked,locked,sticky,private}

# Focus or shift a node
super + {_,shift + }{h,j,k,l}
	bspc node -{f,s} {west,south,north,east}

# Focus or shift a desktop
super + {_,shift + }{1-9,0}
	bspc {desktop -f,node -d} 'focused:^{1-9,10}'

# Preselect the direction to split
super + {shift + v,s,shift + s,v}
	bspc node -p {west,south,north,east}

# Preselect the ratio to split
super + ctrl + {1-9}
	bspc node -o 0.{1-9}

# Cancel preselection
super + Escape
	bspc node -p cancel

# Expand a node
super + {commma,minus,equal,period}
	bspc node -z {left -20 0,bottom 0 20,top 0 -20,right 20 0}

# Contract a node
super + {less,underscore,plus,greater}
	bspc node -z {right -20 0,top 0 20,bottom 0 -20,left 20 }

# Move a floating node
super + ctrl + {h,j,k,l}
	bspc node -v {-20 0,0 20,0 -20,20 0}

# Create a new tabbed
super + alt + t
	. "$HOME/.config/sxhkd/tabs.sh" create

# Insert into an existing tabbed
super + alt + {h,j,k,l}
	. "$HOME/.config/sxhkd/tabs.sh" insert {west,south,north,east}

# Remove from tabbed
super + alt + r
	. "$HOME/.config/sxhkd/tabs.sh" remove
