# Terminal emulator
super + Return
	kitty

# Web browser
super + shift + Return
	firefox

# Application launcher
super + d
	rofi -show drun

# Window switcher
super + w
	rofi -show windowcd

# Lock screen
super + ctrl + BackSpace
	loginctl lock-session

# Brightness down
XF86MonBrightnessDown
	BL=/sys/class/backlight/intel_backlight/brightness; echo "$(cat $BL) - 9" | bc > $BL

# Brightness up
XF86MonBrightnessUp
	BL=/sys/class/backlight/intel_backlight/brightness; echo "$(cat $BL) + 9" | bc > $BL

# Volume down
XF86AudioLowerVolume
	pactl set-sink-mute 0 false; pactl set-sink-volume 0 -5%

# Volume up
XF86AudioRaiseVolume
	pactl set-sink-mute 0 false; pactl set-sink-volume 0 +5%

# Ensure caps lock stays mapped to escape
Caps_Lock
	setxkbmap -option caps:swapescape

# Quit or restart bspwm and sxhkd
super + ctrl + {e,r}
	bspc {quit,wm -r && pkill -USR1 -x sxhkd}

# Close or kill a node
super + shift + {_,ctrl +}q
	bspc node -{c,k}

# Toggle monocle mode
super + m
	bspc desktop -l next

# Set a node's state
super + {t,shift + t,f,shift + f}
	bspc node -t {tiled,pseudo_tiled,floating,fullscreen}

# Set a node's flags
super + ctrl + {m,x,y,z}
	bspc node -g {marked,locked,sticky,private}

# Focus or shift a node
super + {_,shift + }{h,j,k,l}
	bspc node -{f,s} {west,south,north,east}

# Focus or shift a desktop
super + {_,shift + }{1-9,0}
	bspc {desktop -f,node -d} '^{1-9,10}'

# Preselect the direction to split
super + {shift + v,s,shift + s,v}
	bspc node -p {west,south,north,east}

# Preselect the ratio to split
super + ctrl + {1-9}
	bspc node -o 0.{1-9}

# Cancel preselection
super + Escape
	bspc node -p cancel

# Expand a node
super + {commma,minus,equal,period}
	bspc node -z {left -20 0,bottom 0 20,top 0 -20,right 20 0}

# Contract a node
super + {less,underscore,plus,greater}
	bspc node -z {right -20 0,top 0 20,bottom 0 -20,left 20 }

# Move a floating node
super + ctrl + {h,j,k,l}
	bspc node -v {-20 0,0 20,0 -20,20 0}
