#
# Application shortcuts
#

# file manager
super + alt + f
    ranger

# text editor
super + alt + e
    nvim

# music player
super + alt + m
    ncmpcpp

# password manager
super + alt + p
    keepassxc

# terminal emulator
super + alt + t
    urxvt

# web browser
super + alt + w
    firefox

#
# Fn mappings
#

# volume up
XF86AudioRaiseVolume
    pactl set-sink-volume 0 +2%

# volume down
XF86AudioLowerVolume
    pactl set-sink-volume 0 -2%

# volume mute/unmute
XF86AudioMute
    pactl set-sink-mute 0 toggle

# screen brigntness up
XF86MonBrightnessUp
    xbacklight -inc 5

# screen brightness down
XF86MonBrightnessDown
    xbacklight -dec 5

# music play/pause
XF86AudioPlay
    mpc toggle

# music stop
XF86AudioStop
    mpc stop

# music previous
XF86AudioPrev
    mpc prev

# music next
XF86AudioNext
    mpc next
