# AUTOSTART

# WM helpers
exec_always sh -c 'pkill flashfocus; flashfocus'
exec_always sh -c 'pkill kanshi; kanshi'
exec autotiling

# Status bar
exec_always sh -c 'pkill waybar; waybar'
exec mako
exec {
	swayidle -w \
		timeout 240  'pgrep swaylock || notify-send "Autolocking in 1 minute..."' \
		timeout 300  'pgrep swaylock || swaylock' \
		\
		timeout 30   'pgrep swaylock && swaymsg "output * dpms off"' \
			resume   'pgrep swaylock && swaymsg "output * dpms on"' \
		timeout 330  'swaymsg "output * dpms off"' \
			resume   'swaymsg "output * dpms on"' \
		\
		timeout 60   'pgrep swaylock && qsuspend' \
		timeout 360  'qsuspend' \
		\
		before-sleep 'swaylock' \
		lock         'swaylock'
}

# Screen capture
exec /usr/lib/xdg-desktop-portal -r
exec /usr/lib/xdg-desktop-portal-wlr

# Tray items
exec udiskie --appindicator --smart-tray

# Fix slow start for gtk/gnome programs
exec dbus-update-activation-environment --systemd DBUS_SESSION_BUS_ADDRESS DISPLAY XAUTHORITY


# INPUT

# Keyboard
input "type:keyboard" {
	repeat_delay 300
	repeat_rate  50
	xkb_options  caps:swapescape
}

# Touchpad
input "type:touchpad" {
	natural_scroll disabled
	pointer_accel  0.4
	tap            enabled
}


# KEYBINDS

# Super key as modifier
set $mod Mod4

# Do stuff with the mouse
floating_modifier $mod
bindsym --release button2 kill

# Focus node
bindsym $mod+h focus left
bindsym $mod+j focus down
bindsym $mod+k focus up
bindsym $mod+l focus right

# Traverse the hierarchy
bindsym $mod+u focus parent
bindsym $mod+d focus child

# Move node
bindsym $mod+Shift+h move left
bindsym $mod+Shift+j move down
bindsym $mod+Shift+k move up
bindsym $mod+Shift+l move right

# Resize node
bindsym $mod+less    resize shrink width  10 px or 10 ppt
bindsym $mod+greater resize grow   width  10 px or 10 ppt
bindsym $mod+minus   resize shrink height 10 px or 10 ppt
bindsym $mod+plus    resize grow   height 10 px or 10 ppt

# Set split direction
bindsym $mod+s split v
bindsym $mod+v split h

# Set layout
bindsym $mod+e layout toggle split
bindsym $mod+n layout stacking
bindsym $mod+m layout tabbed

# Switch layer focus
bindsym $mod+g focus mode_toggle

# Toggle borders
bindsym $mod+b border toggle

# Toggle floating
bindsym $mod+f floating enable
bindsym $mod+t floating disable

# Toggle sticky
bindsym $mod+o sticky toggle

# Toggle fullscreen
bindsym $mod+z fullscreen toggle

# Close a window
bindsym $mod+Shift+x kill

# Scratchpad
bindsym $mod+y move scratchpad
bindsym $mod+p scratchpad show

# Switch workspace
bindsym $mod+1 workspace number 1
bindsym $mod+2 workspace number 2
bindsym $mod+3 workspace number 3
bindsym $mod+4 workspace number 4
bindsym $mod+5 workspace number 5
bindsym $mod+6 workspace number 6
bindsym $mod+7 workspace number 7
bindsym $mod+8 workspace number 8
bindsym $mod+9 workspace number 9
bindsym $mod+0 workspace number 0

# Move container to workspace
bindsym $mod+Shift+1 move container to workspace number 1
bindsym $mod+Shift+2 move container to workspace number 2
bindsym $mod+Shift+3 move container to workspace number 3
bindsym $mod+Shift+4 move container to workspace number 4
bindsym $mod+Shift+5 move container to workspace number 5
bindsym $mod+Shift+6 move container to workspace number 6
bindsym $mod+Shift+7 move container to workspace number 7
bindsym $mod+Shift+8 move container to workspace number 8
bindsym $mod+Shift+9 move container to workspace number 9
bindsym $mod+Shift+0 move container to workspace number 0

# Adjust gaps
bindsym $mod+bracketleft  gaps inner current plus  5
bindsym $mod+bracketright gaps inner current minus 5

# Reload and restart sway
bindsym $mod+Pause       reload, restart
bindsym $mod+Shift+Pause exec swaymsg exit

# Core applications
bindsym $mod+Return       exec $TERMINAL --class tmux -e tmux
bindsym $mod+Shift+Return exec $BROWSER

# Basic desktop controls
bindsym $mod+space       exec nwggrid
bindsym $mod+Shift+space exec fileopen
bindsym $mod+BackSpace   exec nwgbar

# Input helpers
bindsym $mod+backslash       exec emojimenu
bindsym $mod+Shift+backslash exec passmenu

# Clear notifications
bindsym $mod+grave       exec makoctl dismiss
bindsym $mod+Shift+grave exec makoctl dismiss --all

# Screenshot and screencast
bindsym Print exec screenmenu

# Volume control
bindsym XF86AudioLowerVolume exec pulsemixer --unmute --change-volume -5
bindsym XF86AudioRaiseVolume exec pulsemixer --unmute --change-volume +5

# Brightness control
bindsym XF86MonBrightnessDown exec brightnessctl set 4%-
bindsym XF86MonBrightnessUp   exec brightnessctl set +4%

# Media controls
bindsym XF86AudioStop exec mpc stop
bindsym XF86AudioPlay exec mpc toggle
bindsym XF86AudioPrev exec mpc prev
bindsym XF86AudioNext exec mpc next


# RULES

# Deal with client-side decorations
for_window [app_id="Brave-browser|Flatseal|wdisplays"] border none
for_window [app_id="tmux"]                             border pixel 1
for_window [class="Steam"]                             border pixel 1

# Float certain applications
for_window [app_id="Flatseal|qt5ct|wdisplays|zenity"]          floating enable
for_window [app_id="kitty" title="^fzf$|^nmtui$|^pulsemixer$"] floating enable

# Float dialog boxes and similar
for_window [app_id="^$" title="Brave$"]                                    floating enable; border none
for_window [app_id="brave"]                                                floating enable; border none
for_window [app_id="(?i)shotcut" title="^Open File$|^Shotcut$|^Save XML$"] floating enable; border none
for_window [title="^$"]                                                    floating enable


# THEMING

# Colourscheme
client.focused          #070707 #282828 #eeeeec #070707 #070707
client.focused_inactive #202020 #353535 #919190 #202020 #202020
client.unfocused        #202020 #353535 #919190 #202020 #202020
client.urgent           #070707 #282828 #eeeeec #070707 #070707

# Titlebar and border
default_border          normal 1
default_floating_border normal 1
font                    pango:sans Bold 9
title_align             center

# Wallpaper
output "*" background "$XDG_CONFIG_HOME/background/normal.png" fill

# GTK applications
exec {
	gsettings set org.gnome.desktop.interface cursor-size  16
	gsettings set org.gnome.desktop.interface cursor-theme 'Adwaita'
	gsettings set org.gnome.desktop.interface font-name    'sans 10'
	gsettings set org.gnome.desktop.interface gtk-theme    'Adwaita-dark'
	gsettings set org.gnome.desktop.interface icon-theme   'breeze-dark'
}
