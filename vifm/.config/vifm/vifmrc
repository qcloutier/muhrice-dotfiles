" vim:ft=vim

" Basic settings
only
set history=100
set ignorecase
set incsearch
set millerview
set nofollowlinks
set nohlsearch
set norunexec
set scrolloff=4
set smartcase
set sortnumbers
set statusline="  %A %10u:%-7g %15s %20d  "
set suggestoptions=normal,visual,view,otherpane,keys,marks,registers
set syscalls
set timefmt=%m/%d\ %H:%M
set trash
set trashdir=$HOME/Trash
set undolevels=100
set vicmd=nvim
set vifminfo=bmarks,bookmarks,chistory,dhistory,dirstack,fhistory,phistory,registers,shistory,tui
set vimhelp
set wildmenu
set wildstyle=popup

" File openers
filetype *.aac,*.flac,*.m4a,*.mp3,*.ogg,*.opus,*.wav,*.wma        alacritty mpv %f 2>/dev/null &
filetype *.avi,*.mp4,*.wmv,*.mkv,*.mpg,*.mpeg,*.mov,*.webm,*.m4v  mpv           %f 2>/dev/null &
filetype *.bmp,*.gif,*.jpg,*.jpeg,*.png,*.svg                     pqiv          %f 2>/dev/null &
filetype *.djvu,*.epub,*.pdf,*.ps,*.ps.gz                         zathura       %f 2>/dev/null &
filetype *.doc,*.docx,*.odp,*.ods,*.odt,*.ppt,*.pptx,*.xls,*.xlsx libreoffice   %f 2>/dev/null &
filetype *.html,*.htm                                             firefox       %f 2>/dev/null &

" Colourscheme tweaks
highlight Border     cterm=none ctermfg=none  ctermbg=none
highlight CmdLine    cterm=none ctermfg=white ctermbg=none
highlight JobLine    cterm=bold ctermfg=white ctermbg=none
highlight StatusLine cterm=bold ctermfg=white ctermbg=none
highlight TabLine    cterm=none ctermfg=white ctermbg=none
highlight TabLineSel cterm=bold ctermfg=white ctermbg=none
highlight TopLine    cterm=none ctermfg=white ctermbg=none
highlight TopLineSel cterm=bold ctermfg=white ctermbg=none
highlight Win        cterm=none ctermfg=white ctermbg=none
