# AUTOSTART

# Status bar
exec --no-startup-id polybar top

# Notifications
exec --no-startup-id dunst

# Compositor
exec --no-startup-id picom

# Wallpaper
exec --no-startup-id xwallpaper --daemon --zoom "$HOME/.config/background/normal.png"

# Screen locker
exec --no-startup-id xset s 540s 60s
exec --no-startup-id xss-lock --notifier 'notify-send "Will autolock soon..."' --transfer-sleep-lock -- slock --nofork
exec --no-startup-id caffeine


# KEYBINDS

# Swap caps lock and escape
exec --no-startup-id setxkbmap -option caps:swapescape

# Super key as modifier
set $mod Mod4

# Do stuff with the mouse
floating_modifier $mod

# Focus node
bindsym $mod+h focus left
bindsym $mod+j focus down
bindsym $mod+k focus up
bindsym $mod+l focus right

# Traverse the hierarchy
bindsym $mod+u focus parent
bindsym $mod+d focus child

# Move node
bindsym $mod+Shift+h move left
bindsym $mod+Shift+j move down
bindsym $mod+Shift+k move up
bindsym $mod+Shift+l move right

# Resize node
bindsym $mod+less    resize shrink width  10 px or 10 ppt
bindsym $mod+greater resize grow   width  10 px or 10 ppt
bindsym $mod+minus   resize shrink height 10 px or 10 ppt
bindsym $mod+plus    resize grow   height 10 px or 10 ppt

# Set split direction
bindsym $mod+s split v
bindsym $mod+v split h

# Set layout
bindsym $mod+e layout toggle split
bindsym $mod+n layout stacking
bindsym $mod+m layout tabbed

# Switch layer focus
bindsym $mod+g focus mode_toggle

# Toggle floating
bindsym $mod+f floating enable
bindsym $mod+t floating disable

# Toggle sticky
bindsym $mod+o sticky toggle

# Toggle fullscreen
bindsym $mod+z fullscreen toggle

# Close a window
bindsym $mod+Shift+x kill

# Scratchpad
bindsym $mod+y move scratchpad
bindsym $mod+p scratchpad show

# Switch workspace
bindsym $mod+1 workspace number 1
bindsym $mod+2 workspace number 2
bindsym $mod+3 workspace number 3
bindsym $mod+4 workspace number 4
bindsym $mod+5 workspace number 5
bindsym $mod+6 workspace number 6
bindsym $mod+7 workspace number 7
bindsym $mod+8 workspace number 8
bindsym $mod+9 workspace number 9
bindsym $mod+0 workspace number 0

# Move container to workspace
bindsym $mod+Shift+1 move container to workspace number 1
bindsym $mod+Shift+2 move container to workspace number 2
bindsym $mod+Shift+3 move container to workspace number 3
bindsym $mod+Shift+4 move container to workspace number 4
bindsym $mod+Shift+5 move container to workspace number 5
bindsym $mod+Shift+6 move container to workspace number 6
bindsym $mod+Shift+7 move container to workspace number 7
bindsym $mod+Shift+8 move container to workspace number 8
bindsym $mod+Shift+9 move container to workspace number 9
bindsym $mod+Shift+0 move container to workspace number 0

# Adjust gaps
bindsym $mod+bracketleft  gaps inner current plus  5
bindsym $mod+bracketright gaps inner current minus 5

# Reload and restart i3
bindsym $mod+Control+r reload, restart

# Start a terminal
bindsym $mod+Return exec --no-startup-id alacritty

# Menu openers
bindsym $mod+space     exec --no-startup-id $HOME/.config/rofi/program_menu.sh
bindsym $mod+Tab       exec --no-startup-id $HOME/.config/rofi/window_list.sh
bindsym $mod+BackSpace exec --no-startup-id $HOME/.config/rofi/system_menu.sh

# Take a screenshot
bindsym $mod+Print exec --no-startup-id maim --select --hidecursor | xclip -selection clipboard -target image/png

# Volume control
bindsym XF86AudioLowerVolume exec --no-startup-id pulsemixer --unmute --change-volume -5
bindsym XF86AudioRaiseVolume exec --no-startup-id pulsemixer --unmute --change-volume +5

# Brightness control
bindsym XF86MonBrightnessDown exec --no-startup-id xbacklight -dec 10
bindsym XF86MonBrightnessUp   exec --no-startup-id xbacklight -inc 10

# Quick remap
bindsym Caps_Lock exec --no-startup-id setxkbmap -option caps:swapescape


# RULES

# Floating windows with titlebars
set $fn_cmd   floating enable, border normal 1
set $fn_class "Arandr|qt5ct"
set $fn_role  "About|bubble|Organizer|pop-up|Preferences|task_dialog"
set $fn_type  "dialog|menu"
for_window [class=$fn_class]      $fn_cmd
for_window [window_role=$fn_role] $fn_cmd
for_window [window_type=$fn_type] $fn_cmd

# Floating windows without titlebars
set $fp_cmd   floating enable, border pixel 1
set $fp_class "Flatseal"
set $fp_role  "null"
set $fp_type  "null"
for_window [class=$fp_class]      $fp_cmd
for_window [window_role=$fp_role] $fp_cmd
for_window [window_type=$fp_type] $fp_cmd


# THEMING

# Titlebar and border
default_border          pixel  1
default_floating_border normal 1
font                    pango:sans Bold 9
hide_edge_borders       both
title_align             center

# Colourscheme
client.focused          #303030 #303030 #e8e8e7 #e8e8e7 #303030
client.focused_inactive #343434 #343434 #8e8e8d #8e8e8d #343434
client.unfocused        #343434 #343434 #8e8e8d #8e8e8d #343434
client.urgent           #303030 #303030 #e8e8e7 #e8e8e7 #303030
